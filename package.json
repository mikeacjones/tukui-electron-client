{
  "name": "tukui-client",
  "description": "Electron Client for installing and managing addons hosted on Tukui",
  "author": "github.com/mikeacjones",
  "build": {
    "productName": "Tukui Client",
    "afterSign": "electron-builder-notarize",
    "appId": "net.mikej.personal.wow",
    "mac": {
      "hardenedRuntime": true,
      "entitlements": "./node_modules/electron-builder-notarize/entitlements.mac.inherit.plist",
      "publish": [
        {
          "provider": "github",
          "owner": "mikeacjones",
          "repo": "tukui-electron-client"
        }
      ]
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "version": "0.1.3-alpha",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.11.1",
    "@material-ui/icons": "^4.9.1",
    "electron-is-dev": "^1.2.0",
    "electron-json-storage": "^4.3.0",
    "electron-log": "^4.3.0",
    "electron-updater": "^4.3.5",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-scripts": "4.0.1",
    "web-vitals": "^0.2.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "electron": "^11.0.3",
    "electron-builder": "^22.9.1",
    "electron-builder-notarize": "^1.2.0",
    "wait-on": "^5.2.0"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build && yarn electron-builder --publish=always",
    "build": "yarn react-build && yarn electron-build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
